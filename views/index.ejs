<!-- views/index.ejs -->
<!doctype html>
<html>
<head>
	<title>Node Authentication</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="http://www.w3schools.com/lib/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css">
	<style>
        body {
              background-image:url('library.jpg');
              background-size : cover;
              min-width: 100%;
              min-height: 100%;
              padding-top : 80px;
              background-repeat : no-repeat;                             
        }
	</style>
</head>
<body  >
<div class="w3-container w3-content w3-center w3-padding-64" style="max-width:800px; background-color : lightgray; opacity : 0.7; border-radius : 15px" id="band">

    <% if ( home == 0 ) { %>
        <div class="col-sm-6 col-sm-offset-3">

            <h1><span class="fa fa-sign-in"></span> Login</h1>

            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
            <% } %>

            <!-- LOGIN FORM -->
            <form action="/login" method="post">
                <input type='hidden' name='action' value=1>
                    <div class="form-group">
                    <span style="margin-right:3.15em">Email </span>
                    <input type="text" class="form-control" name="email">
                </div>
                <div class="form-group">
                    <span style="margin-right:1.25em">Password </span>
                    <input type="password" class="form-control" name="password">
                </div>

                <button type="submit" class="w3-btn w3-margin-bottom">Login</button>
            </form>

            <hr>

            <p>Need an account? <a href="/signup">Signup</a></p>
            <p>Or go back to the <a href="/">homepage</a>.</p>
            <!-- <a href ="auth/google">Sign In with Google</a>-->
        </div>
    <% } else { %>
        <div class="jumbotron text-center">
            <h1><span class="fa fa"></span> Welcome to ShareIITK</h1>
            <p>Thousands of candles can be lit from a single candle, and the life of the candle will not be shortened. Happiness never decreases by being shared. - Buddha</p>
            <p>Login or Register with us!</p>

            <form action='/' method = 'post'>
                <input type='hidden' name='action' value=0>
                <button type="submit" class="w3-btn w3-margin-bottom"><span class="fa fa-user"></span> Login</button>
            </form>
            <a href="/signup" class="btn btn-default"><span class="fa fa-user"></span> Signup</a>

        </div>

       <!-- <div>
            <a href="/remove_content" class="btn btn-danger"><span class="fa fa-google-plus"></span> Delete all Users</a>
        </div> -->
    <% } %>
</div>
</body>
</html>
